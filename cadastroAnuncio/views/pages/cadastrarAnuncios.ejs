<%- include('../partials/header'); %>

<div class="container">
    <div class="row">
        <div class="col">

            <h1 class="mt-5">Cadastre seu anúncio</h1>

            <form class="form mt-4" action="/anuncios/cadastrarAnuncios" method="POST" class="box">

                <div class="form-group">
                    <label for="anuncio" class="form-label mt-4">Nome do anúncio</label><br>
                    <input required type="text" class="form-control" aria-label="Nome do anúncio" id="anuncio" name="anuncio" placeholder="Nome do anúncio" >

                </div>

                <div class="form-group">
                    <label for="cliente" class="form-label">Cliente</label>
                    <input required type="text" class="form-control" aria-label="Cliente" id="cliente" name="cliente" placeholder="Cliente"> 
                </div>

                <div class="form-group">
                    <label for="dataInicio" class="form-label">Data de Início:</label><br>
                    <input required type="date" aria-label="Data de Início" id="dataInicio" name="dataInicio"/> 
                </div>

                <div class="form-group">
                    <label for="dataTermino" class="form-label">Data de Término:</label><br>
                    <input required type="date" aria-label="Data de Término" id="dataTermino" name="dataTermino"/> 
                </div>

                <div class="form-group">
                    <label for="investimento" class="form-label">Investimento por dia:</label>
                    <input required type="number" class="form-control" aria-label="Investimento" id="investimento" name="investimento" placeholder="Digite o investimento por dia">
                </div>

                <button type="submit" class="btn mb-3 btn-primary">Cadastrar</button>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>

